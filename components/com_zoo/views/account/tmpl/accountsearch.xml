<?xml version="1.0" encoding="utf-8"?>
<metadata>

	<layout title="Account Search">
		<message><![CDATA[Search Accounts]]></message>
	</layout>
	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_zoo/joomla/fields">  
			<field name="s" type="list" label="Display Accounts" default="all" required="true">
				<option value="all">All Accounts</option>
				<option value="dealership">Dealerships</option>
				<option value="oem">OEMS</option>
				<option value="all-users">All Users</option>
				<option value="user.dealership">Dealership Users</option>
				<option value="user.store">Store Users</option>
			</field>
			<field name="task" type="hidden" default="search" />
			<field name="controller" type="hidden" default="account" />        
		</fieldset>
	</fields>

</metadata>